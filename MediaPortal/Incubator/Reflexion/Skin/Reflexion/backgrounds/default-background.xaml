<?xml version="1.0" encoding="utf-8"?>

<!--
Default background image - no media present
-->

<Screen
    xmlns="www.team-mediaportal.com/2008/mpf/directx"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Name="DefaultBackgroundScreen"
    >
  <DockPanel  VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
    <StackPanel DockPanel.Dock="Center" Background="{ThemeResource BackgroundBrush}"/>
    <StackPanel DockPanel.Dock="Center" Background="{ThemeResource FanartBackgroundBrush}"/>
  </DockPanel>
</Screen>