<Page x:Class="MediaPortal.InstallerUI.Views.UninstallWelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      >

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <!-- RemoveSettings checkbox -->
    <CheckBox Grid.Row="0"
              IsChecked="{Binding RemoveSettings}"
              >Remove settings</CheckBox>

    <!-- UninstallDokan checkbox -->
    <CheckBox Grid.Row="1"
              IsChecked="{Binding UninstallDokan}"
              >Uninstall Dokan</CheckBox>

    <!-- Uninstall button -->
    <Button Grid.Row="2"
            Command="{Binding UninstallCommand}"
            >Uninstall</Button>

  </Grid>
</Page>
