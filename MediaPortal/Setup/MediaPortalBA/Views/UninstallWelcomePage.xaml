<Page x:Class="MediaPortal.InstallerUI.Views.UninstallWelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:iwpvm="clr-namespace:MediaPortal.InstallerUI.ViewModels">

  <Page.Resources>
    <ResourceDictionary>
      <iwpvm:UninstallWelcomePageViewModel x:Key="ViewModel" />
    </ResourceDictionary>
  </Page.Resources>

  <StackPanel DataContext="{StaticResource ViewModel}">

    <!-- RemoveSettings checkbox -->
    <CheckBox Content="Remove settings"
              IsChecked="{Binding RemoveSettings}" />

    <!-- UninstallDokan checkbox -->
    <CheckBox Content="Uninstall Dokan"
              IsChecked="{Binding UninstallDokan}" />

    <!-- Uninstall button -->
    <Button Content="Uninstall"
            Command="{Binding UninstallCommand}" />

  </StackPanel>
</Page>
