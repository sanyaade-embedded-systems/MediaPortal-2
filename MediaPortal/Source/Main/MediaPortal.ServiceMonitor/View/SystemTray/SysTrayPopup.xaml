<Popup
  x:Class="MediaPortal.ServiceMonitor.View.SystemTray.SysTrayPopup"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  StaysOpen="False"
  AllowsTransparency="True"
  Placement="Mouse"
  PopupAnimation="Fade"
  VerticalOffset="-2">


  <Grid MinHeight="60">
    <Border HorizontalAlignment="Stretch" CornerRadius="6,6,6,6" Background="{DynamicResource DialogBackgroundBrush}" Margin="5,5,5,5" BorderThickness="0,0,0,0">
      <Border.Effect>
        <DropShadowEffect Color="#FF6A6A6A" />
      </Border.Effect>
    </Border>
    
  </Grid>
</Popup>
      