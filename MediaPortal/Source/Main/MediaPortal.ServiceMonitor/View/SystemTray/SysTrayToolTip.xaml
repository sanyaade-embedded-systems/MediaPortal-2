<UserControl
  x:Class="MediaPortal.ServiceMonitor.View.SystemTray.SysTrayToolTip"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  Height="56"
  Width="277">
  <Grid>
    <Border HorizontalAlignment="Stretch" Background="{DynamicResource DialogBackgroundBrush}" BorderThickness="1,1,1,1" BorderBrush="{DynamicResource PopupBorderBrush}"
      Margin="0,0,5,5">
      <Border.Effect>
        <DropShadowEffect Color="#FF4D4D4D" />
      </Border.Effect>
    </Border>
    
    
    
    
    <TextBlock
      HorizontalAlignment="Right"
      Margin="0,0,10,10"
      VerticalAlignment="Bottom"
      Height="Auto"
      FontSize="10"
      TextWrapping="Wrap" 
      Text="Right / Left / Double Click for further options" />
  </Grid>
</UserControl>
