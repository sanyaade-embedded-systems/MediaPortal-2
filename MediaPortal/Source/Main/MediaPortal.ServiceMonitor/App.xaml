<Application x:Class="MediaPortal.ServiceMonitor.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Startup="OnStartup" Exit="OnExit"
             ShutdownMode="OnExplicitShutdown">
    <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Resources\Brushes.xaml"/>
        <ResourceDictionary Source="Resources\CommonControlStyles.xaml"/>
        <ResourceDictionary Source="Resources\ListViewStyles.xaml"/>
        <ResourceDictionary Source="Resources\MenuResources.xaml"/>
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>

  </Application.Resources>
</Application>
